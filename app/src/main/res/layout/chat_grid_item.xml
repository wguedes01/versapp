<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_grid_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="1dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/confessionBlue" />

    <ImageView
        android:id="@+id/chat_grid_item_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/chat_grid_item_new_message_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_msg_indicator"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/chat_grid_item_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:ellipsize="end"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/chat_grid_item_last_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="16sp"
        android:padding="4dp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/chat_grid_item_one_to_one_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/chat_tile_one_to_one_icon"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/chat_grid_item_group_icon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/chat_tile_group_icon"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/chat_grid_item_unknown_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/chat_tile_one_to_one_unknown_icon"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>