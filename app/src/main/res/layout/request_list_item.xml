<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/confessionBlue"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/request_list_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/request_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/request_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="2dp"/>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp">


        <TextView
            android:id="@+id/request_accept_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Yep"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@color/greenBeauty"
            android:padding="5dp"
            android:layout_marginRight="3dp"
            />

        <TextView
            android:id="@+id/request_deny_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Nope"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@color/redBeauty"
            android:padding="5dp"
            android:layout_marginLeft="3dp"/>

        </LinearLayout>

</RelativeLayout>