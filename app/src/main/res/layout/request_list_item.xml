<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/confessionBlue"
    android:padding="3dp">

        <ImageView
            android:id="@+id/request_list_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/request_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:padding="2dp"
            android:layout_below="@id/request_list_item_icon"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/request_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="2dp"
            android:layout_below="@id/request_title_text_view"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="gone"
            android:singleLine="true"
            android:ellipsize="end"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_message_text_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <View
            android:id="@+id/request_list_item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"></View>

        <ImageButton
            android:id="@+id/request_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:id="@+id/request_deny_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true"
            />

        </RelativeLayout>

</RelativeLayout>