<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/activity_chat_dashboard_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="0.5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dashboard_btn_bg"/>

    <ImageView
        android:id="@+id/activity_chat_dashboard_background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/activity_chat_dashboard_chat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="2dp"
        android:ellipsize="end"
        android:layout_centerInParent="true"
        android:textSize="30dp"/>


    <RelativeLayout
        android:id="@+id/activity_chat_dashboard_ic_holder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/activity_chat_dashboard_one_to_one_tile_icon_unknown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="10dp"
            android:src="@drawable/ic_anonymous_friend"/>

        <ImageView
            android:id="@+id/activity_chat_dashboard_one_to_one_tile_icon_owner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="10dp"
            android:src="@drawable/chat_tile_one_to_one_icon"/>

        <ImageView
            android:id="@+id/activity_chat_dashboard_group_tile_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:src="@drawable/chat_tile_group_icon"
            android:layout_marginRight="5dp"/>

        </RelativeLayout>

    <TextView
        android:id="@+id/activity_chat_dashboard_last_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/activity_chat_dashboard_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/confessionBlue"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/activity_chat_dashboard_new_message_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/chat_daschboard_new_message_icon"
        android:layout_margin="5dp"
        android:visibility="gone"/>

</RelativeLayout>