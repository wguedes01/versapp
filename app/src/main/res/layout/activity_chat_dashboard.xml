<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.versapp.chat.ChatDashboardActivity"
    android:background="@color/twitterBlue"
    >

    <GridView
        android:id="@+id/activity_chat_dashboard_main_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        ></GridView>

    <TextView
        android:id="@+id/activity_chat_dashboard_no_chats_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_chats_message"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@color/veryDarkTransparent"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:gravity="center"/>

</RelativeLayout>
