<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <RelativeLayout
        android:id="@+id/conversation_list_item_message_content_theirs_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message_bubble_tail"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/conversation_list_item_message_content_theirs"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:gravity="left|center_vertical"
            android:background="@android:color/white"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            />

        </RelativeLayout>

    <ImageView
        android:id="@+id/conversation_list_item_message_image_theirs"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_below="@id/conversation_list_item_message_content_theirs_holder"
        android:layout_margin="5dp"/>

    <RelativeLayout
        android:id="@+id/conversation_list_item_message_content_mine_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/message_bubble_tail_mine"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/conversation_list_item_message_content_mine"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:gravity="left|center_vertical"
            android:background="@color/bubbleBlue"
            android:padding="5dp"/>


    </RelativeLayout>

    <ImageView
        android:layout_below="@id/conversation_list_item_message_content_mine_holder"
        android:id="@+id/conversation_list_item_message_image_mine"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_margin="5dp"/>

</RelativeLayout>